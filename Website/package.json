{
  "name": "indigishare-platform-web",
  "description": "IndigiShare - Web",
  "repository": "https://github.com/Piki-Tech-Social-Enterprise/IndigiShare",
  "license": "MIT",
  "version": "1.0.0",
  "dependencies": {
    "@fortawesome/fontawesome-free": "5.15.3",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^11.2.7",
    "@testing-library/user-event": "^13.1.9",
    "bootstrap": "5.0.2",
    "firebase": "^8.6.8",
    "jquery": "3.6.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^5.2.0",
    "react-scripts": "^4.0.3",
    "reactstrap": "^8.9.0",
    "simple-line-icons": "^2.5.5",
    "sweetalert2": "^11.0.18",
    "sweetalert2-react-content": "^4.1.0"
  },
  "scripts": {
    "updateDependencies": "ncu -x node-sass -u --timeout 180000 && npm i",
    "start": "npm run startLocal",
    "start:og": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "install:clean": "run-s -sn removeNodeModules removePackageLockJsonFile npmInstall startLocal",
    "removeNodeModules": "shx test -e ./node_modules && shx rm -rf ./node_modules && echo \"'node_modules' successfully removed\" || echo \"'node_modules' folder not found\"",
    "removePackageLockJsonFile": "shx test -e ./package-lock.json && shx rm -rf package-lock.json && echo \"'package-lock.json' file successfully removed\" || echo \"'package-lock.json' file not found\"",
    "npmInstall": "npm i",
    "process-sass": "run-s -sn compile-sass minify-sass map-sass",
    "compile-sass": "node-sass src/assets/scss/indigishare-platform.scss src/assets/css/indigishare-platform.css",
    "minify-sass": "node-sass src/assets/scss/indigishare-platform.scss src/assets/css/indigishare-platform.min.css --output-style compressed",
    "map-sass": "node-sass src/assets/scss/indigishare-platform.scss src/assets/css/indigishare-platform.css --source-map true",
    "firebaseServe": "firebase serve",
    "firebaseDeploy": "firebase deploy",
    "firebaseUseProd": "firebase use \"indigishare-platform\"",
    "envCmdLocal": "env-cmd -e local run-s -sn",
    "envCmdProd": "env-cmd -e prod run-s -sn",
    "startLocal": "run-s -sn firebaseUseProd \"envCmdLocal start:og\"",
    "startProd": "run-s -sn firebaseUseProd \"envCmdProd start:og\"",
    "firebaseServeProd": "run-s -sn firebaseUseProd \"envCmdProd build firebaseServe\"",
    "firebaseDeployProd": "run-s -sn firebaseUseProd \"envCmdProd build firebaseDeploy\""
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "browser-sync": "2.26.14",
    "del": "6.0.0",
    "env-cmd": "^10.1.0",
    "gulp": "^4.0.2",
    "gulp-autoprefixer": "^8.0.0",
    "gulp-clean-css": "4.3.0",
    "gulp-header": "2.0.9",
    "gulp-plumber": "^1.2.1",
    "gulp-rename": "2.0.0",
    "gulp-sass": "4.1.0",
    "merge-stream": "2.0.0",
    "node-sass": "^4.14.1",
    "npm-run-all": "^4.1.5",
    "shx": "^0.3.3"
  }
}